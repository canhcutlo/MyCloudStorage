@model CloudStorage.Models.ViewModels.StorageViewModel
@{
    ViewData["Title"] = "My Storage";
    var breadcrumbs = ViewBag.Breadcrumbs as IEnumerable<CloudStorage.Models.StorageItem> ?? new List<CloudStorage.Models.StorageItem>();
    var currentFolderId = ViewBag.CurrentFolderId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    @if (Model.CanEditCurrentFolder)
    {
        <div class="btn-group">
            <a asp-action="Upload" asp-route-folderId="@currentFolderId" class="btn btn-primary">
                <i class="fas fa-upload"></i> Upload File
            </a>
            <a asp-action="CreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-success">
                <i class="fas fa-folder-plus"></i> New Folder
            </a>
            <a asp-action="AICreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-info text-white">
                <i class="bi bi-robot"></i> AI Create
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info mb-0">
            <i class="fas fa-info-circle"></i> Viewing shared folder (Read-only)
        </div>
    }
</div>

<!-- Storage Usage -->
<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6 class="text-muted">Storage Used</h6>
                        <h4>@Math.Round(Model.TotalUsedStorage / 1024.0 / 1024.0, 2) MB</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Storage Quota</h6>
                        <h4>@Math.Round(Model.TotalStorageQuota / 1024.0 / 1024.0, 2) MB</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Files</h6>
                        <h4>@Model.TotalFiles</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Folders</h6>
                        <h4>@Model.TotalFolders</h4>
                    </div>
                </div>
                <div class="progress mt-3">
                    <div class="progress-bar" style="width: @(Model.TotalStorageQuota > 0 ? (Model.TotalUsedStorage * 100.0 / Model.TotalStorageQuota) : 0)%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb Navigation -->
@if (breadcrumbs.Any() || currentFolderId.HasValue)
{
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index"><i class="fas fa-home"></i> Home</a>
            </li>
            @foreach (var folder in breadcrumbs)
            {
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-route-folderId="@folder.Id">
                        @folder.Name
                        @if (folder.Shares != null && folder.Shares.Any(s => s.IsActive))
                        {
                            <i class="fas fa-share-alt text-info ms-1" title="Shared folder"></i>
                        }
                    </a>
                </li>
            }
        </ol>
    </nav>
    @if (Model.CurrentFolder != null && !Model.CanEditCurrentFolder)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> You are viewing a shared folder with @(Model.ItemEditPermissions.Any(kvp => kvp.Value) ? "Editor" : "Viewer") permissions.
        </div>
    }
}

<!-- Search Bar and Sorting -->
<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Search" method="get">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search files and folders...">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <label class="input-group-text bg-light"><i class="fas fa-sort me-1"></i> Sort by</label>
            <select id="sortSelect" class="form-select" onchange="applySorting()">
                <option value="name-asc" selected="@(ViewBag.SortBy == "name" && ViewBag.SortOrder == "asc")"> Name (A-Z)</option>
                <option value="name-desc" selected="@(ViewBag.SortBy == "name" && ViewBag.SortOrder == "desc")"> Name (Z-A)</option>
                <option value="date-desc" selected="@(ViewBag.SortBy == "date" && ViewBag.SortOrder == "desc")"> Date (Newest First)</option>
                <option value="date-asc" selected="@(ViewBag.SortBy == "date" && ViewBag.SortOrder == "asc")"> Date (Oldest First)</option>
                <option value="size-asc" selected="@(ViewBag.SortBy == "size" && ViewBag.SortOrder == "asc")"> Size (Smallest First)</option>
                <option value="size-desc" selected="@(ViewBag.SortBy == "size" && ViewBag.SortOrder == "desc")"> Size (Largest First)</option>
            </select>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Favorites" class="btn btn-outline-warning me-2">
            <i class="fas fa-star"></i> Favorites
        </a>
        <a asp-action="SharedItems" class="btn btn-outline-primary">
            <i class="fas fa-share-alt"></i> Shared Items
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["PublicShareUrl"] != null)
{
    <div class="alert alert-info alert-dismissible fade show">
        <strong>Public Share URL:</strong>
        <div class="input-group mt-2">
            <input type="text" class="form-control" value="@TempData["PublicShareUrl"]" readonly id="shareUrl">
            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">Copy</button>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- File/Folder List -->
<div class="card">
    <div class="card-body">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Modified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <a asp-action="Index" asp-route-folderId="@item.Id" class="text-decoration-none">
                                            <i class="fas fa-folder text-warning me-2"></i>@item.Name
                                        </a>
                                    }
                                    else
                                    {
                                        <i class="fas fa-file text-primary me-2"></i>@item.Name
                                    }
                                    
                                    @if (item.Shares != null && item.Shares.Any(s => s.IsActive))
                                    {
                                        <i class="fas fa-share-alt text-info ms-2" title="Shared"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <span class="badge bg-secondary">Folder</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">File</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                    {
                                        @Math.Round(item.Size / 1024.0 / 1024.0, 2) <text>MB</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@item.ModifiedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @{
                                        var canEdit = Model.ItemEditPermissions.GetValueOrDefault(item.Id, false);
                                    }
                                    <div class="btn-group" role="group">
                                        @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                        {
                                            <a asp-controller="Preview" asp-action="Document" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Preview">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Download">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        }
                                        
                                        @{
                                            var isFavorite = Model.ItemFavoriteStatuses.GetValueOrDefault(item.Id, false);
                                        }
                                        
                                        <form asp-action="ToggleFavorite" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="currentFolderId" value="@currentFolderId" />
                                            <button type="submit" class="btn btn-sm @(isFavorite ? "btn-warning" : "btn-outline-warning")" title="@(isFavorite ? "Remove from favorites" : "Add to favorites")">
                                                <i class="@(isFavorite ? "fas" : "far") fa-star"></i>
                                            </button>
                                        </form>
                                        
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-success" 
                                                onclick="openShareModal(@item.Id, '@Html.Raw(item.Name.Replace("'", "\\'"))')"
                                                title="Share">
                                            <i class="fas fa-share-alt"></i>
                                        </button>
                                        
                                        @if (canEdit)
                                        {
                                            <a asp-action="Rename" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Rename">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="currentFolderId" value="@currentFolderId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">This folder is empty</h5>
                <p class="text-muted">@(Model.CanEditCurrentFolder ? "Upload files or create folders to get started." : "This shared folder is currently empty.")</p>
                
                @if (Model.CanEditCurrentFolder)
                {
                    <div class="mt-3">
                        <a asp-action="Upload" asp-route-folderId="@currentFolderId" class="btn btn-primary me-2">
                            <i class="fas fa-upload"></i> Upload File
                        </a>
                        <a asp-action="CreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-success">
                            <i class="fas fa-folder-plus"></i> New Folder
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const shareUrl = document.getElementById('shareUrl');
            shareUrl.select();
            shareUrl.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(shareUrl.value);
            
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Copied!';
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }

        function applySorting() {
            const sortSelect = document.getElementById('sortSelect');
            const selectedValue = sortSelect.value;
            const [sortBy, sortOrder] = selectedValue.split('-');
            
            const currentFolderId = '@ViewBag.CurrentFolderId';
            const url = new URL(window.location.href);
            url.searchParams.set('sortBy', sortBy);
            url.searchParams.set('sortOrder', sortOrder);
            
            if (currentFolderId) {
                url.searchParams.set('folderId', currentFolderId);
            }
            
            window.location.href = url.toString();
        }

        // Set selected option on page load
        document.addEventListener('DOMContentLoaded', function() {
            const sortBy = '@ViewBag.SortBy' || 'name';
            const sortOrder = '@ViewBag.SortOrder' || 'asc';
            const sortSelect = document.getElementById('sortSelect');
            sortSelect.value = sortBy + '-' + sortOrder;
        });
    </script>
}