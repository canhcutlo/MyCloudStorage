@model CloudStorage.Models.ViewModels.StorageViewModel
@{
    ViewData["Title"] = "My Storage";
    var breadcrumbs = ViewBag.Breadcrumbs as IEnumerable<CloudStorage.Models.StorageItem> ?? new List<CloudStorage.Models.StorageItem>();
    var currentFolderId = ViewBag.CurrentFolderId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <div class="btn-group">
        <a asp-action="Upload" asp-route-folderId="@currentFolderId" class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload File
        </a>
        <a asp-action="CreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-success">
            <i class="fas fa-folder-plus"></i> New Folder
        </a>
        <a asp-action="AICreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-info text-white">
            <i class="bi bi-robot"></i> AI Create
        </a>
    </div>
</div>

<!-- Storage Usage -->
<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6 class="text-muted">Storage Used</h6>
                        <h4>@Math.Round(Model.TotalUsedStorage / 1024.0 / 1024.0, 2) MB</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Storage Quota</h6>
                        <h4>@Math.Round(Model.TotalStorageQuota / 1024.0 / 1024.0, 2) MB</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Files</h6>
                        <h4>@Model.TotalFiles</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Folders</h6>
                        <h4>@Model.TotalFolders</h4>
                    </div>
                </div>
                <div class="progress mt-3">
                    <div class="progress-bar" style="width: @(Model.TotalStorageQuota > 0 ? (Model.TotalUsedStorage * 100.0 / Model.TotalStorageQuota) : 0)%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb Navigation -->
@if (breadcrumbs.Any() || currentFolderId.HasValue)
{
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index"><i class="fas fa-home"></i> Home</a>
            </li>
            @foreach (var folder in breadcrumbs)
            {
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-route-folderId="@folder.Id">@folder.Name</a>
                </li>
            }
        </ol>
    </nav>
}

<!-- Search Bar -->
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Search" method="get">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search files and folders...">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="SharedItems" class="btn btn-outline-primary">
            <i class="fas fa-share-alt"></i> Shared Items
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["PublicShareUrl"] != null)
{
    <div class="alert alert-info alert-dismissible fade show">
        <strong>Public Share URL:</strong>
        <div class="input-group mt-2">
            <input type="text" class="form-control" value="@TempData["PublicShareUrl"]" readonly id="shareUrl">
            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">Copy</button>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- File/Folder List -->
<div class="card">
    <div class="card-body">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Modified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <a asp-action="Index" asp-route-folderId="@item.Id" class="text-decoration-none">
                                            <i class="fas fa-folder text-warning me-2"></i>@item.Name
                                        </a>
                                    }
                                    else
                                    {
                                        <i class="fas fa-file text-primary me-2"></i>@item.Name
                                    }
                                    
                                    @if (item.Shares != null && item.Shares.Any(s => s.IsActive))
                                    {
                                        <i class="fas fa-share-alt text-info ms-2" title="Shared"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <span class="badge bg-secondary">Folder</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">File</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                    {
                                        @Math.Round(item.Size / 1024.0 / 1024.0, 2) <text>MB</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@item.ModifiedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                        {
                                            <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        }
                                        
                                        <a asp-action="Share" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-share-alt"></i>
                                        </a>
                                        
                                        <a asp-action="Rename" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="currentFolderId" value="@currentFolderId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">This folder is empty</h5>
                <p class="text-muted">Upload files or create folders to get started.</p>
                
                <div class="mt-3">
                    <a asp-action="Upload" asp-route-folderId="@currentFolderId" class="btn btn-primary me-2">
                        <i class="fas fa-upload"></i> Upload File
                    </a>
                    <a asp-action="CreateFolder" asp-route-parentFolderId="@currentFolderId" class="btn btn-success">
                        <i class="fas fa-folder-plus"></i> New Folder
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const shareUrl = document.getElementById('shareUrl');
            shareUrl.select();
            shareUrl.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(shareUrl.value);
            
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Copied!';
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }
    </script>
}