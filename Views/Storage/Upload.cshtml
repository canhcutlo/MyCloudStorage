@model CloudStorage.Models.ViewModels.UploadFileViewModel
@{
    ViewData["Title"] = "Upload File";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="ParentFolderId" />
                    
                    <div class="mb-3">
                        <label asp-for="File" class="form-label">Select File</label>
                        <input asp-for="File" class="form-control" type="file" />
                        <span asp-validation-for="File" class="text-danger"></span>
                        <div class="form-text">Maximum file size: 100MB</div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a description for this file"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="AutoClassify" class="form-check-input" />
                        <label asp-for="AutoClassify" class="form-check-label">
                            ðŸ¤– Auto-classify into appropriate folder
                        </label>
                        <div class="form-text">AI will automatically organize your file into the right category folder</div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Upload
                        </button>
                        <a asp-action="Index" asp-route-folderId="@Model.ParentFolderId" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && file.size > 100 * 1024 * 1024) { // 100MB
                alert('File size exceeds 100MB limit.');
                e.target.value = '';
            }
        });
    </script>
}