@model CloudStorage.Models.ViewModels.StorageViewModel
@{
    ViewData["Title"] = "Favorites";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-star text-warning me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Storage
    </a>
</div>

<!-- Statistics -->
<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="text-muted">Total Favorites</h6>
                        <h4>@(Model.TotalFiles + Model.TotalFolders)</h4>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Files</h6>
                        <h4>@Model.TotalFiles</h4>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Folders</h6>
                        <h4>@Model.TotalFolders</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Favorites List -->
<div class="card">
    <div class="card-body">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Modified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <a asp-action="Index" asp-route-folderId="@item.Id" class="text-decoration-none">
                                            <i class="fas fa-folder text-warning me-2"></i>@item.Name
                                        </a>
                                    }
                                    else
                                    {
                                        <i class="fas fa-file text-primary me-2"></i>@item.Name
                                    }
                                    
                                    @if (item.Shares != null && item.Shares.Any(s => s.IsActive))
                                    {
                                        <i class="fas fa-share-alt text-info ms-2" title="Shared"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.Folder)
                                    {
                                        <span class="badge bg-secondary">Folder</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">File</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                    {
                                        @Math.Round(item.Size / 1024.0 / 1024.0, 2) <text>MB</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@item.ModifiedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @{
                                        var canEdit = Model.ItemEditPermissions.GetValueOrDefault(item.Id, false);
                                        var isFavorite = Model.ItemFavoriteStatuses.GetValueOrDefault(item.Id, false);
                                    }
                                    <div class="btn-group" role="group">
                                        @if (item.Type == CloudStorage.Models.StorageItemType.File)
                                        {
                                            <a asp-controller="Preview" asp-action="Document" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Preview">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Download">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        }
                                        
                                        <form asp-action="ToggleFavorite" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm @(isFavorite ? "btn-warning" : "btn-outline-warning")" title="@(isFavorite ? "Remove from favorites" : "Add to favorites")">
                                                <i class="@(isFavorite ? "fas" : "far") fa-star"></i>
                                            </button>
                                        </form>
                                        
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-success" 
                                                onclick="openShareModal(@item.Id, '@Html.Raw(item.Name.Replace("'", "\\'"))')"
                                                title="Share">
                                            <i class="fas fa-share-alt"></i>
                                        </button>
                                        
                                        @if (canEdit)
                                        {
                                            <a asp-action="Rename" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Rename">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="far fa-star fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No favorites yet</h5>
                <p class="text-muted">Click the star icon on any file or folder to add it to your favorites for quick access.</p>
                
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-folder-open"></i> Browse Storage
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @* Include share modal script *@
    <script src="~/js/share-modal.js"></script>
}
