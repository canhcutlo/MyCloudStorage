@model CloudStorage.Models.ViewModels.AICreateFolderViewModel
@{
    ViewData["Title"] = "AI Create Folder";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-robot"></i> AI Create Folder & Files
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading"><i class="bi bi-lightbulb"></i> How to use AI Create:</h6>
                        <p class="mb-2">Simply describe what folder and files you want, and AI will create them for you!</p>
                        <hr>
                        <p class="mb-1"><strong>üìù Example prompts:</strong></p>
                        <ul class="mb-0 small">
                            <li><em>"Create a project folder with README.md, TODO.md, and CHANGELOG.md"</em></li>
                            <li><em>"T·∫°o folder h·ªçc t·∫≠p v·ªõi 3 file: To√°n.txt, VƒÉn.txt, Anh.txt"</em></li>
                            <li><em>"Make a website template folder with index.html, style.css, and script.js"</em></li>
                            <li><em>"Create 10 test files numbered from test1.txt to test10.txt"</em></li>
                            <li><em>"T·∫°o folder b√°o c√°o v·ªõi file word v√† excel"</em></li>
                        </ul>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="AICreateFolder" method="post">
                        <input type="hidden" asp-for="ParentFolderId" />
                        
                        <div class="mb-3">
                            <label asp-for="Prompt" class="form-label fw-bold">
                                <i class="bi bi-chat-left-text"></i> Describe what you want to create:
                            </label>
                            <textarea asp-for="Prompt" class="form-control" rows="6" 
                                placeholder="Example: Create a meeting notes folder with agenda.md, minutes.md, and action-items.md files"
                                required></textarea>
                            <span asp-validation-for="Prompt" class="text-danger"></span>
                            <div class="form-text">
                                üí° Tip: Be specific about folder name and the files you want. AI supports Vietnamese and English!
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-magic"></i> ‚ú® Create with AI
                            </button>
                            <a asp-action="Index" asp-route-folderId="@Model.ParentFolderId" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
