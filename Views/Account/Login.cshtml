@model CloudStorage.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="auth-page">
    <div class="left-panel">
        <div class="brand">
            <div class="logo">
                <i class="fas fa-cloud"></i>
            </div>
            <div class="brand-name">CloudStorage</div>
        </div>
        <h1 class="hero-title">Store, Share & Collaborate</h1>
        <p class="hero-sub">Your files, accessible anywhere, anytime</p>

        <ul class="features">
            <li>
                <i class="fas fa-database"></i>
                <div>
                    <strong>5GB Free Storage</strong><br />
                    <small>Get started with generous free storage space</small>
                </div>
            </li>
            <li>
                <i class="fas fa-shield-alt"></i>
                <div>
                    <strong>Secure & Encrypted</strong><br />
                    <small>Your files are protected with industry-standard encryption</small>
                </div>
            </li>
            <li>
                <i class="fas fa-share-alt"></i>
                <div>
                    <strong>Easy Sharing</strong><br />
                    <small>Share files and folders with anyone, anywhere</small>
                </div>
            </li>
        </ul>

        <footer class="left-footer">Â© 2025 CloudStorage. All rights reserved.</footer>
    </div>

    <div class="right-panel">
        <div class="auth-card">
            <div class="tab-switch">
                <button class="tab active">Login</button>
                <a class="tab" asp-action="Register">Register</a>
            </div>

            <div class="auth-content">
                <h3>Welcome back</h3>
                <p class="muted">Sign in to your account to continue</p>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div asp-validation-summary="ModelOnly"></div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Login" method="post" class="mt-4">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control input-pill" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <input asp-for="Password" class="form-control input-pill-left" placeholder="Enter your password" id="loginPassword" />
                            <button type="button" class="btn btn-outline-secondary input-pill-right" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label class="form-check-label">Remember me</label>
                        </div>
                        <a asp-action="ForgotPassword" class="text-muted small">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-gradient">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>

                    <div class="text-center mt-3">
                        <p class="text-muted small">
                            Don't have an account? <a asp-action="Register" class="fw-bold">Create one</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('togglePassword')?.addEventListener('click', function () {
            const input = document.getElementById('loginPassword');
            const icon = this.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        });
    </script>
}